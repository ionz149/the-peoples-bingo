---
// import the Image component and the image
import { Image } from 'astro:assets';
import logoImage from '../assets/the-peoples-bingo-logo.svg';
import refreshImage from '../assets/refresh.svg';
---
<header id="header">
	<div class="inner">
        <h1><Image src={logoImage} alt="The People's Bingo" height="99" width="250" class="logo" loading="eager" /></h1>
		<button class="btn btn-restart"><Image src={refreshImage} alt="Refresh the board" height="23" width="23" class="refresh" loading="lazy" /></button>
	</div>
</header>